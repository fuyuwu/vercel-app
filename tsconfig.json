{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es6", "DOM"],
    "allowJs": true,
    "skipLibCheck": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false, //採取嚴格模式
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "types": ["react", "node"]
  },
  "include": ["src"],
  "exclude": ["node-modules"]
}
